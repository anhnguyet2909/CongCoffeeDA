<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_button"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/arrow_brown"
                android:id="@+id/btnBackAddOptions"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:text="Cập nhật option"
                android:textSize="@dimen/_16sdp"
                android:layout_marginLeft="@dimen/_10sdp"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="@dimen/_14sdp"
            android:text="Tên option"/>
        <EditText
            android:inputType="textWebEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bg_btn_save"
            android:textColor="@color/text"
            android:id="@+id/etAddOptionName"/>
        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="@dimen/_14sdp"
            android:text="Định giá"/>
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bg_btn_save"
            android:textColor="@color/text"
            android:id="@+id/etAddOptionPrice"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/text"
            android:textSize="@dimen/_16sdp"
            android:text="Danh sách nguyên liệu"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMaterialOption"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp" />

        <TextView
            android:id="@+id/tvAddMaterialOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Thêm nguyên liệu"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/text"
            android:layout_gravity="right"
            android:textSize="@dimen/_15sdp"/>
        <Button
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_save"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            android:id="@+id/btnSaveOptionConfirm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bg_button"
            android:text="hoặc"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"/>
        <Button
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_btn_delete"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/bg_button"
            android:text="Xóa"
            android:textAllCaps="false"
            android:id="@+id/btnDeleteOptionConfirm"/>
    </LinearLayout>

</layout>